extends ../layout/index 
block content 
    nav(class="bg-gray-800 border border.lg p-2 font-extrabolder h-30 text-xl")
        div(class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8 relative flex h-16 items-center justify-between")
            div(class="absolute inset-y-0 left-0 flex items-center sm:hidden")
                button(id="mobile-menu-button" class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" type="button" aria-controls="mobile-menu" aria-expanded="false")
                    span(class="absolute -inset-0.5")
                    span(class="sr-only") open main menu
                    svg( class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true")
                        path(stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5")
            div(class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start")
                div( class="flex flex-shrink-0 items-center")
                    img(class="h-10 w-auto" src="/img/Grupo 1.png" alt="SPC company")
                div(class="hidden sm:ml-6 sm:block space-x-4")
                    a(class="text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-base font-medium" href="/admin-home") Dashboard
                    a(class="bg-gray-900 text-white rounded-md px-3 py-2 text-base font-medium" href="/admin-home/usuarios" aria-current="page") Usuarios
                    a(class="text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-base font-medium" href="/admin-home/servicios") Servicios
                    a(class="text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-base font-medium" href="/logout") Cerrar sesion 
            div( class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0")
                p#msg.text-white Bienvenido Administrador 
        div(id="mobile-menu" class="sm:hidden hidden")
            div(class="space-y-1 px-2 pb-3 pt-2")
                a(class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium" href="/admin-home") Dashboard
                a(class="bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium" href="/admin-home/usuarios"  aria-current="page") Usuarios
                a(class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium" href="/admin-home/servicios") Servicios
                a(class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium" href="/logout") Cerrar sesion

    div.py-2.tracking-wide
    h1.text-center.text-4xl.my-10.font-extrabolder(class="text-SPC") SPC 
        span.font-normal.text-black  
    
    h2.text-center.text-3xl.font-extrabold Editar usuario

    if errors 
        div#message.mt-8.mx-auto.max-w-xl(class="text-center time")
            div.text-center(class="bg-red-500 text-white uppercase font-bold rounded-t px-4 mt-1 max-w-xl") danger
                
            div.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold(class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700  max-w-xl" )
                each error in errors 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
    div.mt-8.mx-auto.max-w-xl
        .bg-white.py-8.px-4.shadow-x1.rounded-lg.border.border-gray-400.shadow-2xl
            form.space-y-5(action=`/admin-home/usuarios/editar/${userData.id}` method="POST" noValidate)
                div.mb-4
                    label.block.text-sm.uppercase.text-gray-700.font-bold(for="name") Nombre: 
                    input#name.w-full.px-3.py-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="Nombre" name="name" value=userData && userData.name ? userData.name: '')
                div.mb-4
                    label.block.text-sm.uppercase.text-gray-700.font-bold(for="lastname") Apellidos: 
                    input#lastname.w-full.px-3.py-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="Apellidos" name="lastname" value=userData && userData.email ? userData.email: '')
                div.mb-4
                    label.block.text-sm.uppercase.text-gray-700.font-bold(for="tel") Telefono: 
                    input#tel.w-full.px-3.py-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="Telefono" name="tel" type="tel" value=userData && userData.tel ? userData.tel: '')
                    
                div.mb-4
                    label.block.text-sm.uppercase.text-gray-700.font-bold(for="email") Correo electronico: 
                    input#email.w-full.px-3.py-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="spc@email.com" name="email" type="email" value=userData && userData.email ? userData.email: '')
                div.mb-4
                    label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="type")  Tipo de usuario
                        select#type.w-full.px-3.py-2.border.border-gray-300.rounded(name="type")
                            option(value="Usuario" selected=userData && userData.type === "Usuario") Usuario
                            option(value="Administrador" selected=userData && userData.type === "Administrador") Administrador 
                div.mb-4
                    label.block.text-sm.uppercase.text-gray-700.font-bold(for="password") Contraseña:
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="*******" name="password" type="password")
                    
                div.mb-4
                    label.block.text-sm.uppercase.text-gray-700.font-bold(for="repeatPassword") Repite la contraseña:
                    input#repeatPassword.w-full.px-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="*******" name="repeatPassword" type="password")

                input#btn-register.w-full.bg-white.text-black.border.border-black(class="text-black font-bold py-3 cursor-pointer rounded-lg hover:bg-gray-800 hover:text-white" type="submit" value="Editar usuario usuario")

                div.flex.items-center.justify-between.pt-5